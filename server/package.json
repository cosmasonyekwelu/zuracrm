{
  "name": "zura-backend",
  "version": "2.0.0",
  "description": "Production-ready backend for Zura CRM (Node.js, Express, MongoDB, JWT)",
  "type": "module",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "seed": "node src/seed.js",
    "dev:cmd": "set NODE_ENV=development&& nodemon src/server.js",
    "dev:ps": "powershell -Command \"$env:NODE_ENV='development'; nodemon src/server.js\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nanoid": "^5.0.7",
    "nodemailer": "^7.0.5",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "prom-client": "^15.1.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.2"
  }
}
